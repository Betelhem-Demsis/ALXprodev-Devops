#!/bin/bash

INPUT_FILE="data.json"

if [[ ! -f "$INPUT_FILE" ]]; then
  echo "Error: $INPUT_FILE not found. Please run the API automation script first."
  exit 1
fi

NAME=$(jq -r '.name' "$INPUT_FILE")
HEIGHT=$(jq -r '.height' "$INPUT_FILE" | awk '{printf "%.1f", $1 / 10}')
WEIGHT=$(jq -r '.weight' "$INPUT_FILE" | awk '{printf "%.1f", $1 / 10}')
TYPE=$(jq -r '.types[0].type.name' "$INPUT_FILE")


NAME=$(echo "$NAME" | sed 's/.*/\u&/')
TYPE=$(echo "$TYPE" | sed 's/.*/\u&/')
OUTPUT="$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
echo "$OUTPUT"
